@Html.AntiForgeryToken()
@using OrderSystem.Authorization;
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

<script>
    var $Page = {
        User: @Html.Raw(@ViewData["User"]),
        Roles : @Html.Raw(@ViewData["Roles"])
    }
</script>
<div id="Form">
    <div class="form-group">
        <label>帳號</label>
        <div v-text="Account"></div>
        <label>姓名</label>
        <input v-model="Name" type="text" class="form-control">
        <error-message :errors="Errors['Name']"></error-message>
        <label>信箱</label>
        <input v-model="Email" type="text" class="form-control">
        <error-message :errors="Errors['Email']"></error-message>
        <label>權限角色</label>

        @if ((await AuthorizationService.AuthorizeAsync(User, null, new PermissionAuthorizationRequirement(new string[] { "Basic_Permission_Modify" }))).Succeeded)
        {
            <select class="form-control" v-model="RoleId">
                <option v-for="option in Roles" v-bind:value="option.Id">
                    {{ option.Name }}
                </option>
            </select>
        }
        else
        {
            <div v-text="RoleName"></div>
        }
    <div class="text-right my-3">
        <button onclick="window.history.back();" type="button" class="btn btn-primary">
            取消
        </button>
        @if ((await AuthorizationService.AuthorizeAsync(User, null, new PermissionAuthorizationRequirement(new string[] { Permissions.Basic_UserManagement_Modify }))).Succeeded)
        {
            <button v-on:click="create()" type="button" class="btn btn-primary">
                更新基本資料
            </button>
        }
        </div>
    </div>

</div>
@section Scripts {
    <script src="~/js/Pages/User/UserUpdate.js"></script>
}
