@model OrderSystem.ViewModels.UserSignUpViewModel;
@{
    ViewData["Title"] = "Create Page";
}

<form asp-controller="User" asp-action="SignUp" >
    <div>
        <label>姓名</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>@ViewData["ErrorAccountExist"]
    <div>
        <label>帳號</label>
        <input asp-for="Account" />
        <span asp-validation-for="Account"></span>
        <span>@ViewData["ErrorAccountExist"]</span>
    </div>
    <div>
        <label>密碼</label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
       
    </div>
    <div>
        <label>再輸入一次密碼</label>
        <input asp-for="Password2" />
        <span asp-validation-for="Password2"></span>
        <span>@ViewData["ErrorPassword2"]</span>
</div>
    <div>
        <label>信箱</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
        <span>@ViewData["ErrorEmailExist"]</span>
    </div>
    <div>
        <input type="submit" value="註冊" />
    </div>
</form>

