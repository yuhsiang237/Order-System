@Html.AntiForgeryToken()
<div id="CreateForm">
    <div class="form-group">
        <label>出貨單編號</label>
        <input disabled value="系統自動產生" type="text" class="form-control">
        <label>出貨日</label>
        <input class="form-control" placeholder="選擇出貨日" type="text" id="DeliveryDate" v-model="DeliveryDate" />
        <div>
            {{Errors["Order.DeliveryDate"]}}
        </div>
        <label>出貨地址</label>
        <input class="form-control" placeholder="地址" type="text" v-model="Address" />
        <label>完成日</label>
        <input class="form-control" placeholder="選擇完成日" type="text" id="FinishDate" v-model="FinishDate" />
        <label>總金額(自動計算)</label>
        <input disabled v-model="Total" type="text" class="form-control">
        <label>簽收者</label>
        <input v-model="SignName" type="text" class="form-control">
        <label>備註</label>
        <textarea class="form-control" v-model="Remarks"></textarea>
        <br />
        <div class="text-right mb-3">
            <button v-on:click="createRow()" type="button" class="btn btn-primary">
                增加一列
            </button>
        </div>
        <div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            商品編號
                        </th>
                        <th>
                            商品名稱
                        </th>
                        <th>
                            價格
                        </th>
                        <th>
                            數量
                        </th>
                        <th>
                            備註
                        </th>
                        <th>
                            操作
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="(item, index) in OrderDetails">
                        <td>
                            {{index+1}}
                        </td>
                        <td>
                            <input v-model="item.ProductNumber" type="text" class="form-control" />
                        </td>
                        <td>
                            <input v-model="item.ProductName" type="text" class="form-control" />
                        </td>
                        <td>
                            <input v-model="item.ProductPrice" type="text" class="form-control" />
                        </td>
                        <td>
                            <input v-model="item.ProductUnit" type="text" class="form-control" />
                        </td>
                        <td>
                            <input v-model="item.ProductRemarks" type="text" class="form-control" />
                        </td>
                        <td>
                            <button v-on:click="deleteRow(item.index)" type="button" class="btn btn-primary">
                                刪除
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="text-right">
        <button v-on:click="createOrder()" type="button" class="btn btn-primary">
            新建訂單
        </button>
    </div>
</div>

@section Scripts {
    <script src="~/js/Pages/Order/ShipmentOrderCreate.js"></script>
}
