@Html.AntiForgeryToken()
<script>
    var $Page = {
        Order: @Html.Raw(@ViewData["Order"]),
        OrderDetails : @Html.Raw(@ViewData["OrderDetails"])
    }
</script>
<div id="Form">
    <div class="form-group">
        <label>出貨單編號</label>
        <input disabled v-model="Number" type="text" class="form-control">
        <label>出貨日</label>
        <input class="form-control" placeholder="選擇出貨日" type="text" id="DeliveryDate" v-model="DeliveryDate" />
        <error-message :errors="Errors['Order.DeliveryDate']"></error-message>
        <label>出貨地址</label>
        <input class="form-control" placeholder="地址" type="text" v-model="Address" />
        <error-message :errors="Errors['Order.Address']"></error-message>
        <label>完成日</label>
        <input class="form-control" placeholder="選擇完成日" type="text" id="FinishDate" v-model="FinishDate" />
        <label>總金額(自動計算)</label>
        <input disabled v-model="Total" type="text" class="form-control">
        <label>簽收者</label>
        <input v-model="SignName" type="text" class="form-control">
        <label>備註</label>
        <textarea class="form-control" v-model="Remarks"></textarea>
        <br />
        <error-message :errors="Errors['OrderDetails']"></error-message>
        <div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            (商品編號)商品名稱
                        </th>
                        <th>
                            價格
                        </th>
                        <th>
                            數量
                        </th>
                        <th>
                            備註
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="(item, index) in OrderDetails">
                        <td>
                            <span v-text="index+1"></span>
                        </td>
                        <td>
                            (<span v-text="item.ProductNumber"></span>)
                            <span v-text="item.ProductName"></span>
                        </td>
                        <td>
                            <span v-text="item.ProductPrice"></span>
                        </td>
                        <td>
                            <span v-text="item.ProductUnit"></span>
                        </td>
                        <td>
                            <span v-text="item.ProductRemarks"></span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="text-right">
        <button onclick="window.history.back();" type="button" class="btn btn-primary">
            取消
        </button>
        <button v-on:click="updateOrder()" type="button" class="btn btn-primary">
            更新訂單
        </button>
    </div>
</div>

@section Scripts {
    <script src="~/js/Pages/Order/ShipmentOrderEdit.js"></script>
}
